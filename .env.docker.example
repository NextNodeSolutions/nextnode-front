# Docker Environment Configuration
# Copy this file to .env.docker and modify as needed

# Node.js Version
NODE_VERSION=22

# Package Manager
PNPM_VERSION=10.12.4

# Application Configuration
APP_PORT=4321
HOST_PORT=4321
CONTAINER_NAME=nextnode-astro

# Runtime Environment
NODE_ENV=production

# Docker Build Optimization - Disable buildx to fix "target default" issue
DOCKER_BUILDKIT=0
COMPOSE_DOCKER_CLI_BUILD=0

# Resource Limits (for production)
MEMORY_LIMIT=512M
CPU_LIMIT=0.5

# Logging
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3