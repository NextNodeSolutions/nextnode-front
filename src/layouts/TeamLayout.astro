---
/**
 * TeamLayout.astro - Layout for team member profile pages
 *
 * Provides consistent structure for team member profiles with photo,
 * name, role, bio, education, experience, and social links.
 * Extends BaseLayout for navigation and footer.
 * Integrates @nextnode/logger for page load tracking.
 */

import BaseLayout from '@/layouts/BaseLayout.astro'
import Text from '@/components/fundations/elements/Text.astro'
import Wrapper from '@/components/fundations/containers/Wrapper.astro'
import { logger } from '@nextnode/logger'

export interface SocialLink {
	/** Platform name (twitter, linkedin, github, etc.) */
	platform: string
	/** URL to the social profile */
	url: string
	/** Optional label for accessibility */
	label?: string
}

export interface Props {
	/** Team member name */
	name: string
	/** Team member role/title */
	role: string
	/** Short introduction/tagline */
	intro?: string
	/** Avatar/photo URL */
	avatar?: string
	/** Avatar alt text */
	avatarAlt?: string
	/** Education history */
	education?: string[]
	/** Experience/work history */
	experience?: string[]
	/** Social media links */
	socialLinks?: SocialLink[]
	/** Page title (defaults to member name) */
	title?: string
	/** Page description for meta */
	description?: string
}

const {
	name,
	role,
	intro,
	avatar,
	avatarAlt,
	education = [],
	experience = [],
	socialLinks = [],
	title,
	description,
} = Astro.props

const pageTitle = title ?? `${name} - ${role}`
const pageDescription = description ?? `Meet ${name}, ${role} at NextNode.`

logger.info('Team member profile loaded', {
	details: {
		name,
		role,
		pathname: Astro.url.pathname,
	},
})

const socialIcons: Record<string, string> = {
	twitter:
		'M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z',
	linkedin:
		'M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z',
	github: 'M12 .297c-6.63 0-12 5.373-12 12 0 5.303 3.438 9.8 8.205 11.385.6.113.82-.258.82-.577 0-.285-.01-1.04-.015-2.04-3.338.724-4.042-1.61-4.042-1.61C4.422 18.07 3.633 17.7 3.633 17.7c-1.087-.744.084-.729.084-.729 1.205.084 1.838 1.236 1.838 1.236 1.07 1.835 2.809 1.305 3.495.998.108-.776.417-1.305.76-1.605-2.665-.3-5.466-1.332-5.466-5.93 0-1.31.465-2.38 1.235-3.22-.135-.303-.54-1.523.105-3.176 0 0 1.005-.322 3.3 1.23.96-.267 1.98-.399 3-.405 1.02.006 2.04.138 3 .405 2.28-1.552 3.285-1.23 3.285-1.23.645 1.653.24 2.873.12 3.176.765.84 1.23 1.91 1.23 3.22 0 4.61-2.805 5.625-5.475 5.92.42.36.81 1.096.81 2.22 0 1.606-.015 2.896-.015 3.286 0 .315.21.69.825.57C20.565 22.092 24 17.592 24 12.297c0-6.627-5.373-12-12-12',
	website:
		'M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z',
}
---

<BaseLayout title={pageTitle} description={pageDescription}>
	<section>
		<Wrapper
			variant="standard"
			class="grid grid-cols-1 py-42 lg:grid-cols-4"
		>
			<div class="lg:col-span-2">
				<Text tag="span" variant="textSM" class="text-white">
					{role}
				</Text>
				<Text
					tag="h1"
					variant="display2XL"
					class="font-display mt-12 text-balance text-white"
				>
					{name}
				</Text>
				{
					intro && (
						<Text
							tag="p"
							variant="textBase"
							class="mt-2 text-balance text-white"
						>
							{intro}
						</Text>
					)
				}
				{
					avatar && (
						<img
							width="500"
							height="500"
							src={avatar}
							alt={avatarAlt ?? `${name} photo`}
							class="mt-8 aspect-video w-full object-cover object-top"
						/>
					)
				}
				<div
					class="mt-12 grid grid-cols-1 gap-y-12 lg:grid-cols-2 lg:gap-y-24"
				>
					{
						education.length > 0 && (
							<div class="before:bg-white">
								<div class="relative px-4 before:absolute before:top-0 before:left-0 before:h-6 before:w-px before:bg-white after:absolute after:top-8 after:bottom-0 after:left-0 after:w-px">
									<Text
										tag="h3"
										variant="textBase"
										class="text-white"
									>
										Education
									</Text>
									<Text
										tag="p"
										variant="textSM"
										class="text-base-400 mt-2"
									>
										{education.map((item, index) => (
											<span>
												{index > 0 && ', '}
												{item}
											</span>
										))}
									</Text>
								</div>
							</div>
						)
					}
					{
						experience.length > 0 && (
							<div class="before:bg-white">
								<div class="relative items-start px-4 before:absolute before:top-0 before:left-0 before:h-6 before:w-px before:bg-white after:absolute after:top-8 after:bottom-0 after:left-0 after:w-px">
									<Text
										tag="h3"
										variant="textBase"
										class="text-white"
									>
										Experience
									</Text>
									<Text
										tag="p"
										variant="textSM"
										class="text-base-400 mt-2"
									>
										{experience.map((item, index) => (
											<span>
												{index > 0 && ', '}
												{item}
											</span>
										))}
									</Text>
								</div>
							</div>
						)
					}
				</div>

				{
					socialLinks.length > 0 && (
						<div class="mt-12 flex gap-4">
							{socialLinks.map(link => (
								<a
									href={link.url}
									target="_blank"
									rel="noopener noreferrer"
									aria-label={
										link.label ??
										`${name} on ${link.platform}`
									}
									class="text-base-400 transition-colors hover:text-white"
								>
									<svg
										class="h-5 w-5"
										fill="currentColor"
										viewBox="0 0 24 24"
										aria-hidden="true"
									>
										<path
											d={
												socialIcons[
													link.platform.toLowerCase()
												] ?? socialIcons.website
											}
										/>
									</svg>
								</a>
							))}
						</div>
					)
				}
			</div>
			<Wrapper variant="prose" class="mt-12 lg:col-span-2 lg:row-start-2">
				<slot />
			</Wrapper>
		</Wrapper>
	</section>
</BaseLayout>
