---
// Astro component for gradient circle effects
---

<div class="md:block hidden absolute top-20 right-1/5 -z-50 animate-pulse-slow">
  <div class="relative w-[200px] h-[200px]">
    <div class="absolute inset-0 bg-gradient-to-r from-purple-400 to-fuchsia-500 opacity-50 rounded-full animate-liquid small-circle blur-xl"></div>
    <div class="absolute inset-0 bg-gradient-to-l from-blue-700 to-sky-200 opacity-50 rounded-full animate-liquid small-circle delay-700 blur-xl"></div>
  </div>
</div>

<!-- Central left gradient circle -->
<div class="md:block hidden absolute bottom-1/3 left-1/4 -z-50 animate-pulse-slow">
  <div class="relative w-[500px] h-[500px]">
    <div class="absolute inset-0 bg-gradient-to-br from-blue-500 to-zinc-300 opacity-10 rounded-full animate-liquid large-circle blur-xl"></div>
    <div class="absolute inset-0 bg-gradient-to-tr from-emerald-400 to-green-200 opacity-10 rounded-full animate-liquid large-circle delay-1000 blur-xl"></div>
  </div>
</div>

<style>
  @keyframes liquid {
    0% {
      transform: scale(1) translate(0px, 0px);
      border-radius: 50%;
    }
    33% {
      transform: scale(var(--scale-1)) translate(var(--translate-x-1), var(--translate-y-1));
      border-radius: var(--border-radius-1);
    }
    66% {
      transform: scale(var(--scale-2)) translate(var(--translate-x-2), var(--translate-y-2));
      border-radius: var(--border-radius-2);
    }
    100% {
      transform: scale(1) translate(0px, 0px);
      border-radius: 50%;
    }
  }

  .animate-liquid {
    animation: liquid var(--duration) ease-in-out infinite;
  }

  .small-circle {
    --scale-1: 1.05;
    --scale-2: 0.8;
    --translate-x-1: 30px;
    --translate-y-1: 30px;
    --translate-x-2: -30px;
    --translate-y-2: 15px;
    --border-radius-1: 40% 60% 70% 30% / 40% 50% 50% 60%;
    --border-radius-2: 70% 30% 50% 50% / 30% 30% 70% 70%;
    --duration: 13s;
  }

  .large-circle {
    --scale-1: 1.15;
    --scale-2: 0.75;
    --translate-x-1: 35px;
    --translate-y-1: -20px;
    --translate-x-2: -30px;
    --translate-y-2: 30px;
    --border-radius-1: 60% 40% 30% 70% / 60% 30% 70% 40%;
    --border-radius-2: 40% 60% 70% 30% / 60% 40% 60% 40%;
    --duration: 18s;
  }
</style> 