		title: 'Product',
		links: [
			{ label: 'Features', href: '/features' },
			{ label: 'Pricing', href: '/pricing' },
			{ label: 'Integrations', href: '/integrations' },
			{ label: 'Changelog', href: '/changelog' },
		],
	},
	{
		title: 'Resources',
		links: [
			{ label: 'Blog', href: '/blog' },
			{ label: 'Help Center', href: '/helpcenter' },
			{ label: 'Customers', href: '/customers' },
			{ label: 'Documentation', href: '/docs' },
		],
	},
	{
		title: 'Company',
		links: [
			{ label: 'About', href: '/team' },
			{ label: 'Jobs', href: '/jobs' },
			{ label: 'Contact', href: '/contact' },
			{ label: 'Legal', href: '/legal' },
		],
	},
]

const defaultSocialLinks: SocialLink[] = [
	{ label: 'Twitter', href: 'https://twitter.com/nextnode', icon: 'twitter' },
	{ label: 'GitHub', href: 'https://github.com/nextnode', icon: 'github' },
	{
		label: 'LinkedIn',
		href: 'https://linkedin.com/company/nextnode',
		icon: 'linkedin',
	},
	{ label: 'Discord', href: 'https://discord.gg/nextnode', icon: 'discord' },
]

const {
	sections = defaultSections,
	socialLinks = defaultSocialLinks,
	showNewsletter = true,
} = Astro.props

const currentYear = new Date().getFullYear()

