}
---

<footer class="bg-base-950 relative overflow-hidden">
	<Wrapper class="pt-16 pb-12">
		<div class="grid grid-cols-1 gap-12 lg:grid-cols-12">
			<!-- Logo and Newsletter Section -->
			<div class="lg:col-span-5">
				<a href="/" aria-label="Go to homepage" title="Homepage">
					<Logo size="lg" variant="light" />
				</a>

				{
					showNewsletter && (
						<div class="mt-8">
							<Text
								tag="h3"
								variant="textBase"
								class="font-medium text-white"
							>
								Subscribe to our newsletter
							</Text>
							<Text
								tag="p"
								variant="textSM"
								class="text-base-400 mt-2"
							>
								Get the latest updates and news delivered to
								your inbox.
							</Text>
							<form class="mt-4" id="newsletter-form">
								<div class="flex flex-col gap-3 sm:flex-row">
									<div class="flex-1">
										<label
											for="newsletter-email"
											class="sr-only"
										>
											Email address
										</label>
										<input
											id="newsletter-email"
											name="email"
											type="email"
											required
											autocomplete="email"
											placeholder="Enter your email"
											class="border-base-800 bg-base-900 placeholder-base-500 focus:border-nextnode-500 focus:ring-nextnode-500 h-10 w-full rounded-full border px-4 text-sm text-white transition-colors duration-200 focus:ring-1 focus:outline-none"
										/>
									</div>
									<Button
										type="submit"
										size="sm"
										variant="orange"
									>
										Subscribe
									</Button>
								</div>
							</form>
						</div>
					)
				}
			</div>

			<!-- Link Sections -->
			<div class="grid grid-cols-2 gap-8 sm:grid-cols-3 lg:col-span-7">
				{
					sections.map(section => (
						<div>
							<Text
								tag="h3"
								variant="textSM"
								class="font-medium text-white"
							>
								{section.title}
							</Text>
							<nav
								role="navigation"
								aria-label={`${section.title} links`}
								class="mt-4"
							>
								<ul role="list" class="space-y-3">
									{section.links.map(link => (
										<li>
											<a
												href={link.href}
												title={link.label}
												aria-label={link.label}
												class="text-base-400 text-sm transition-colors duration-200 hover:text-white"
											>
												{link.label}
											</a>
										</li>
									))}
								</ul>
							</nav>
						</div>
					))
				}
			</div>
		</div>

		<!-- Bottom Section -->
		<div
			class="border-base-800 mt-12 flex flex-col items-center justify-between gap-6 border-t pt-8 sm:flex-row"
		>
			<!-- Social Links -->
			<div class="flex items-center gap-4">
				{
					socialLinks.map(social => (
						<a
							href={social.href}
							title={social.label}
							aria-label={social.label}
							target="_blank"
							rel="noopener noreferrer"
							class="text-base-400 transition-colors duration-200 hover:text-white"
						>
							<svg
								viewBox="0 0 24 24"
								class="size-5"
								fill="currentColor"
								aria-hidden="true"
							>
								<path d={socialIcons[social.icon]} />
							</svg>
						</a>
					))
				}
			</div>

			<!-- Copyright -->
			<Text tag="p" variant="textXS" class="text-base-500">
				&copy; {currentYear} NextNode. All rights reserved.
			</Text>
		</div>
	</Wrapper>
</footer>
