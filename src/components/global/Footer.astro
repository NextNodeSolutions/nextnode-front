---
/**
 * Footer.astro - Site footer with navigation links and newsletter signup
 *
 * Includes configurable link sections, social media links,
 * newsletter subscription form, and Logo component.
 */

import Logo from '@/components/assets/Logo.astro'
import Text from '@/components/fundations/elements/Text.astro'
import Button from '@/components/fundations/elements/Button.astro'
import Wrapper from '@/components/fundations/containers/Wrapper.astro'

/**
 * Single footer link
 */
export interface FooterLink {
	label: string
	href: string
}

/**
 * Footer link section with title and links
 */
export interface FooterSection {
	title: string
	links: FooterLink[]
}

/**
 * Social media link
 */
export interface SocialLink {
	label: string
	href: string
	icon: 'twitter' | 'github' | 'linkedin' | 'discord'
}

interface Props {
	/** Footer navigation sections */
	sections?: FooterSection[]
	/** Social media links */
	socialLinks?: SocialLink[]
	/** Whether to show newsletter signup form */
	showNewsletter?: boolean
}

