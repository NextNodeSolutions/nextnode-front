---
import { cn } from '@/lib/core/utils'
// Use new i18n system from middleware
const { t, locale } = Astro.locals
import GradientCircle from '@/components/common/GradientCircle.astro'
import CalActionButton from '@/components/ui/CalActionButton'
---

<section class="relative overflow-hidden">
	<!-- Background Effects -->
	<GradientCircle />

	<!-- Hero Content -->
	<div
		class={cn(
			'mx-auto max-w-6xl px-4 py-12',
			'sm:px-6 sm:py-16',
			'md:py-20',
			'lg:px-8 lg:py-24',
		)}
	>
		<div class="text-center">
			<!-- Badge -->
			<div class="mb-6 flex justify-center">
				<div
					class={cn(
						'inline-flex items-center rounded-full',
						'bg-gradient-to-r from-brand-blue/10 to-brand-green/10',
						'px-3 py-1.5 text-xs sm:px-4 sm:py-2 sm:text-sm font-medium',
						'ring-1 ring-inset ring-brand-blue/20',
						'backdrop-blur-sm',
						'dark:from-brand-blue/10 dark:to-brand-green/10',
						'dark:ring-brand-blue/20',
						'animate-badge-pulse-soft',
						'opacity-0 animate-fade-in-up',
					)}
				>
					<span class="text-brand-blue dark:text-brand-blue">
						{t('pricing.hero.badge')}
					</span>
				</div>
			</div>

			<!-- Main Title -->
			<div class="space-y-4">
				<h1
					class={cn(
						'text-3xl font-bold tracking-tight',
						'sm:text-4xl md:text-5xl lg:text-6xl',
						'opacity-0 animate-fade-in-up',
					)}
				>
					<span class="text-gray-900 dark:text-gray-100">
						{t('pricing.hero.title')}
					</span>
					<br />
					<span
						class={cn(
							'bg-gradient-to-r from-brand-blue to-brand-green',
							'dark:from-brand-blue dark:to-brand-green',
							'bg-clip-text text-transparent',
						)}
					>
						{t('pricing.hero.titleHighlight')}
					</span>
					<br />
					<span class="text-gray-900 dark:text-gray-100">
						{t('pricing.hero.titleEnd')}
					</span>
				</h1>

				<!-- Subtitle -->
				<p
					class={cn(
						'mx-auto max-w-2xl text-base sm:text-lg text-gray-600',
						'dark:text-gray-300',
						'opacity-0 animate-fade-in-up animation-delay-200',
					)}
				>
					{t('pricing.hero.subtitle')}
				</p>

				<!-- Description -->
				<p
					class={cn(
						'mx-auto max-w-3xl text-sm sm:text-base text-gray-500',
						'dark:text-gray-400',
						'leading-relaxed',
						'opacity-0 animate-fade-in-up animation-delay-400',
					)}
				>
					{t('pricing.hero.description')}
				</p>
			</div>

			<!-- CTA Section -->
			<div
				class={cn(
					'mt-10 flex flex-col items-center',
					'opacity-0 animate-fade-in-up animation-delay-600',
				)}
			>
				<div class="w-full max-w-md sm:w-auto">
					<CalActionButton
						calLink="walid-mos"
						buttonText={t('pricing.hero.cta.button')}
						locale={locale}
						variant="hero"
						size="lg"
						showArrow={true}
						client:visible
					/>
				</div>

				<p
					class="mt-4 max-w-md text-center text-sm text-gray-600 dark:text-gray-400"
				>
					{t('pricing.hero.cta.subtitle')}
				</p>
			</div>
		</div>
	</div>

	<!-- Scroll Indicator -->
	<div
		class={cn(
			'absolute bottom-4 sm:bottom-8 left-1/2 -translate-x-1/2',
			'opacity-0 animate-fade-in-up animation-delay-800',
			'hidden sm:block', // Hide on mobile to save space
		)}
	>
		<div class="flex flex-col items-center space-y-2">
			<span class="text-sm text-gray-500 dark:text-gray-400">
				{t('pricing.sections.discoverPlans')}
			</span>
			<div
				class={cn(
					'h-6 w-1 rounded-full',
					'bg-gradient-to-b from-brand-blue to-brand-green',
					'animate-bounce',
				)}
			>
			</div>
		</div>
	</div>
</section>
