---
import { cn } from '@/lib/core/utils'
// Use new i18n system from middleware
const { t } = Astro.locals
import { ButtonWithLink } from '@/components/ui/forms/button-with-link'
import { PricingFAQAccordion } from './PricingFAQAccordion'

// Get FAQ data from translations
const faqData = {
	title: t('pricing.faq.title'),
	questions: t('pricing.faq.questions'),
}
---

<section class="py-8 sm:py-12 md:py-16 lg:py-20">
	<div class="mx-auto max-w-4xl px-4 sm:px-6 lg:px-8">
		<!-- Section Header -->
		<div class="mb-8 text-center sm:mb-12 lg:mb-16">
			<h2
				class={cn(
					'text-2xl sm:text-3xl md:text-4xl font-bold tracking-tight text-gray-900 dark:text-white',
					'opacity-0 animate-fade-in-up',
				)}
			>
				{faqData.title}
			</h2>
		</div>

		<!-- FAQ Items -->
		<PricingFAQAccordion questions={faqData.questions} client:load />

		<!-- Additional CTA -->
		<div
			class={cn(
				'mt-8 sm:mt-12 lg:mt-16 text-center',
				'opacity-0 animate-fade-in-up',
				'animation-delay-800',
			)}
		>
			<p
				class="mb-4 text-sm text-gray-600 sm:mb-6 sm:text-base dark:text-gray-300"
			>
				{t('pricing.faqContactText')}
			</p>
			<ButtonWithLink
				href="#"
				variant="default"
				className={cn(
					'btn-gradient-primary group w-auto cursor-pointer px-6 py-3',
					'hover-lift shadow-lg transition-shadow hover:shadow-2xl',
					'text-sm font-semibold tracking-wide text-white',
					'sm:px-8 sm:py-4 sm:text-base',
					'rounded-lg',
				)}
			>
				{t('pricing.contactButton')}
			</ButtonWithLink>
		</div>
	</div>
</section>
