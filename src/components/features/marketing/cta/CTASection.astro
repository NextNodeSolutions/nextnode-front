---
import { cn } from '@/lib/core/utils'
import CalEmbed from '@/components/ui/CalEmbed'

const { t, locale } = Astro.locals
---

<section
	class={cn(
		'relative overflow-hidden',
		'py-16 sm:py-20 lg:py-28',
		'bg-gradient-to-br from-brand-blue/80 via-brand-blue-muted/70 to-brand-green-muted/75',
	)}
>
	<!-- Grid Pattern Background -->
	<div class="absolute inset-0 opacity-[0.08]">
		<div
			class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff12_1px,transparent_1px),linear-gradient(to_bottom,#ffffff12_1px,transparent_1px)] bg-[size:24px_24px]"
		>
		</div>
	</div>

	<!-- Animated Background Blobs -->
	<div
		class="absolute top-0 left-0 h-72 w-72 animate-pulse rounded-full bg-white/30 opacity-50 blur-3xl sm:h-96 sm:w-96"
	>
	</div>
	<div
		class="animation-delay-1000 absolute right-0 bottom-0 h-72 w-72 animate-pulse rounded-full bg-white/30 opacity-50 blur-3xl sm:h-96 sm:w-96"
	>
	</div>

	<!-- Main Content Container -->
	<div class={cn('relative mx-auto max-w-4xl', 'px-6 sm:px-8 lg:px-12')}>
		<div
			class="flex flex-col items-center space-y-6 text-center sm:space-y-8 lg:space-y-10"
		>
			<!-- Title -->
			<h2
				class={cn(
					'animate-fade-in-up text-3xl font-bold leading-tight tracking-tight text-white opacity-0 sm:text-4xl lg:text-5xl',
				)}
			>
				{t('home.cta.title')}
			</h2>

			<!-- Description -->
			<p
				class={cn(
					'animation-delay-300 animate-fade-in-up max-w-2xl text-base leading-relaxed text-white/90 opacity-0 sm:text-lg lg:text-xl',
				)}
			>
				{t('home.cta.description')}
			</p>

			<!-- CTA Button -->
			<div
				class={cn(
					'premium-cta-wrapper',
					'w-full sm:w-auto sm:min-w-[280px]',
					'animate-fade-in-up animation-delay-600 opacity-0',
				)}
			>
				<CalEmbed
					calLink="walid-mos"
					mode="popup"
					buttonText={t('home.cta.primaryButton')}
					locale={locale}
					client:load
				/>
			</div>

			<!-- Reassurance Text -->
			<p
				class={cn(
					'animate-fade-in-up animation-delay-900 flex flex-col items-center gap-3 text-sm font-extrabold text-white opacity-0 sm:flex-row sm:gap-4 sm:text-base',
				)}
			>
				<span>✓ {t('home.cta.reassurance.free')}</span>
				<span class="hidden text-white/60 sm:inline">•</span>
				<span>✓ {t('home.cta.reassurance.noCommitment')}</span>
				<span class="hidden text-white/60 sm:inline">•</span>
				<span>✓ {t('home.cta.reassurance.transparent')}</span>
			</p>
		</div>
	</div>
</section>

<style>
	/* Premium CTA Button Styles - Reused from PremiumHero */
	.premium-cta-wrapper :global(button) {
		position: relative;
		overflow: hidden;
		border-radius: 0.75rem;
		padding: 0.75rem 1.5rem;
		font-weight: 700;
		font-size: 0.875rem;
		color: white;
		box-shadow:
			0 20px 25px -5px rgb(0 0 0 / 0.1),
			0 8px 10px -6px rgb(0 0 0 / 0.1);
		transition: all 0.3s ease;
		background: transparent !important;
	}

	@media (min-width: 640px) {
		.premium-cta-wrapper :global(button) {
			padding: 1rem 2rem;
			font-size: 1rem;
		}
	}

	@media (min-width: 1024px) {
		.premium-cta-wrapper :global(button) {
			padding: 1.125rem 2.5rem;
			font-size: 1.125rem;
		}
	}

	.premium-cta-wrapper :global(button::before) {
		content: '';
		position: absolute;
		inset: 0;
		background: linear-gradient(
			to right,
			var(--brand-blue),
			var(--brand-green-muted),
			var(--brand-green)
		);
		background-size: 200% 200%;
		animation: gradientShift 3s ease infinite;
		z-index: -1;
	}

	@keyframes gradientShift {
		0% {
			background-position: 0% 50%;
		}
		50% {
			background-position: 100% 50%;
		}
		100% {
			background-position: 0% 50%;
		}
	}

	.premium-cta-wrapper :global(button::after) {
		content: '';
		position: absolute;
		inset: 0;
		border-radius: 0.75rem;
		border: 2px solid rgba(255, 255, 255, 0.2);
		pointer-events: none;
	}

	.premium-cta-wrapper :global(button:hover) {
		transform: scale(1.05);
		box-shadow:
			0 0 40px rgba(59, 130, 246, 0.5),
			0 20px 25px -5px rgb(0 0 0 / 0.2);
	}

	.premium-cta-wrapper :global(button:hover::before) {
		background: linear-gradient(
			to right,
			var(--brand-blue),
			var(--brand-blue),
			var(--brand-blue-muted)
		);
		animation: none;
	}

	/* Icon animation */
	.premium-cta-wrapper :global(button span) {
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 0.5rem;
	}
</style>
