---
import { CheckCircle2, TrendingUp } from 'lucide-react'
import { cn } from '@/lib/core/utils'

interface Props {
	className?: string
}

const { className } = Astro.props
const { t } = Astro.locals
---

<div
	class={cn(
		'relative w-full max-w-xl p-2 sm:translate-x-5 lg:translate-x-8',
		className,
	)}
>
	<!-- Main card - Browser/Dashboard mockup -->
	<div
		class="dark:bg-brand-charcoal relative aspect-[4/3] w-full transform cursor-pointer rounded-2xl bg-white p-6 shadow-2xl transition-transform duration-300 hover:scale-[1.02] sm:p-8"
	>
		<div class="flex h-full flex-col space-y-6">
			<!-- Browser header -->
			<div class="flex items-center gap-2">
				<div class="flex gap-1.5">
					<div class="h-3 w-3 rounded-full bg-red-400"></div>
					<div class="h-3 w-3 rounded-full bg-yellow-400"></div>
					<div class="h-3 w-3 rounded-full bg-green-400"></div>
				</div>
				<div class="bg-brand-gray-light ml-4 h-6 flex-1 rounded-md">
				</div>
			</div>

			<!-- Content area -->
			<div class="flex-1 space-y-4">
				<!-- Header bar -->
				<div class="flex items-center justify-between">
					<div
						class="from-brand-blue-soft to-brand-green-soft h-6 w-24 rounded bg-gradient-to-r"
					>
					</div>
					<div class="flex gap-2">
						<div class="bg-brand-gray-light h-6 w-6 rounded-full">
						</div>
						<div class="bg-brand-gray-light h-6 w-6 rounded-full">
						</div>
					</div>
				</div>

				<!-- Chart bars -->
				<div class="space-y-2.5">
					<div class="flex items-center gap-2">
						<div
							class="bg-brand-blue-soft h-2.5 flex-1 rounded-full"
						>
						</div>
						<div class="text-xs text-gray-400">100%</div>
					</div>
					<div class="flex items-center gap-2">
						<div
							class="bg-brand-green-soft h-2.5 w-5/6 rounded-full"
						>
						</div>
						<div class="text-xs text-gray-400">85%</div>
					</div>
					<div class="flex items-center gap-2">
						<div
							class="bg-brand-blue-muted h-2.5 w-3/5 rounded-full"
						>
						</div>
						<div class="text-xs text-gray-400">60%</div>
					</div>
				</div>

				<!-- Stats cards -->
				<div class="mt-6 grid grid-cols-2 gap-3">
					<div class="bg-brand-blue-soft/20 rounded-lg p-3">
						<div class="mb-1 text-xs text-gray-500">
							{t('home.hero.dashboard.conversion')}
						</div>
						<div
							class="text-brand-blue-dark dark:text-brand-blue-soft text-xl font-bold"
						>
							24.8%
						</div>
					</div>
					<div class="bg-brand-green-soft/20 rounded-lg p-3">
						<div class="mb-1 text-xs text-gray-500">
							{t('home.hero.dashboard.growth')}
						</div>
						<div
							class="text-brand-green-dark dark:text-brand-green-soft text-xl font-bold"
						>
							+127%
						</div>
					</div>
				</div>

				<!-- Bottom lines -->
				<div class="space-y-2">
					<div class="bg-brand-gray-light h-2 w-full rounded-full">
					</div>
					<div class="bg-brand-gray-light h-2 w-4/5 rounded-full">
					</div>
				</div>
			</div>
		</div>
	</div>

	<!-- Floating badge - Top right -->
	<div
		class="dark:bg-brand-charcoal animate-float-vertical border-brand-gray-light absolute -top-4 -right-4 transform cursor-pointer rounded-xl border bg-white p-3 shadow-xl transition-transform duration-300 hover:scale-110"
	>
		<div class="flex items-center gap-2">
			<div
				class="bg-brand-green-soft/50 flex h-10 w-10 items-center justify-center rounded-full"
			>
				<CheckCircle2 className="text-brand-green-dark h-5 w-5" />
			</div>
			<div>
				<div class="text-xl font-bold text-gray-900 dark:text-white">
					98%
				</div>
				<div class="text-[10px] text-gray-600 dark:text-gray-400">
					{t('home.hero.dashboard.satisfaction')}
				</div>
			</div>
		</div>
	</div>

	<!-- Floating badge - Bottom left -->
	<div
		class="dark:bg-brand-charcoal animate-float-vertical animation-delay-1000 border-brand-gray-light absolute -bottom-4 -left-4 transform cursor-pointer rounded-xl border bg-white p-3 shadow-xl transition-transform duration-300 hover:scale-110"
	>
		<div class="flex items-center gap-2">
			<div
				class="bg-brand-blue-soft/50 flex h-10 w-10 items-center justify-center rounded-full"
			>
				<TrendingUp className="text-brand-blue-dark h-5 w-5" />
			</div>
			<div>
				<div class="text-xl font-bold text-gray-900 dark:text-white">
					100+
				</div>
				<div class="text-[10px] text-gray-600 dark:text-gray-400">
					{t('home.hero.dashboard.projects')}
				</div>
			</div>
		</div>
	</div>
</div>
