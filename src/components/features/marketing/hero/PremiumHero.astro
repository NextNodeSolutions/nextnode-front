---
import { cn } from '@/lib/core/utils'
import CalEmbed from '@/components/ui/CalEmbed'

const { t, locale } = Astro.locals
---

<section
	class={cn(
		'relative min-h-[90vh] flex items-center justify-center overflow-hidden',
		'bg-gradient-to-br from-brand-black via-brand-charcoal to-brand-soft-black',
	)}
>
	<!-- Gradient Overlays -->
	<div
		class="from-brand-blue/10 to-brand-green/10 pointer-events-none absolute inset-0 bg-gradient-to-br via-transparent"
	>
	</div>
	<div
		class="bg-brand-blue/20 absolute top-0 right-0 h-96 w-96 animate-pulse rounded-full opacity-20 blur-3xl"
	>
	</div>
	<div
		class="bg-brand-green/20 animation-delay-1000 absolute bottom-0 left-0 h-96 w-96 animate-pulse rounded-full opacity-20 blur-3xl"
	>
	</div>

	<!-- Content -->
	<div class="relative z-10 mx-auto max-w-7xl px-6 py-24 sm:px-8 lg:px-12">
		<div class="space-y-8 text-center lg:space-y-12">
			<!-- Subtitle -->
			<p
				class={cn(
					'text-sm sm:text-base font-medium tracking-wide uppercase',
					'text-brand-green opacity-0 animate-fade-in-up',
					'max-w-3xl mx-auto',
				)}
			>
				{t('home.hero.subtitle')}
			</p>

			<!-- Main Title -->
			<h1
				class={cn(
					'text-4xl sm:text-5xl md:text-6xl lg:text-7xl xl:text-8xl',
					'font-bold tracking-tight leading-tight',
					'opacity-0 animate-fade-in-up animation-delay-300',
				)}
			>
				<span class="text-white">{t('home.hero.title')}</span><br />
				<span
					class="from-brand-blue to-brand-green bg-gradient-to-r bg-clip-text text-transparent"
				>
					{t('home.hero.titleHighlight')}
				</span><br />
				<span class="text-white">{t('home.hero.titleEnd')}</span>
			</h1>

			<!-- Description -->
			<p
				class={cn(
					'text-lg sm:text-xl lg:text-2xl text-gray-300 leading-relaxed',
					'opacity-0 animate-fade-in-up animation-delay-600',
					'max-w-4xl mx-auto',
				)}
			>
				{t('home.hero.description')}
			</p>

			<!-- CTA Button -->
			<div
				class={cn(
					'opacity-0 animate-fade-in-up animation-delay-900',
					'flex justify-center',
				)}
			>
				<CalEmbed
					calLink="walid-mos"
					mode="popup"
					buttonText={t('home.hero.cta')}
					locale={locale}
					client:load
				/>
			</div>

			<!-- Scroll Indicator -->
			<div
				class={cn(
					'opacity-0 animate-fade-in-up animation-delay-1200',
					'flex flex-col items-center gap-2 pt-12',
				)}
			>
				<span class="text-sm tracking-wider text-gray-400 uppercase"
					>Scroll to explore</span
				>
				<div
					class="flex h-10 w-6 justify-center rounded-full border-2 border-gray-600 p-2"
				>
					<div
						class="from-brand-blue to-brand-green h-3 w-1 animate-bounce rounded-full bg-gradient-to-b"
					>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

<style>
	@keyframes fadeInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.animate-fade-in-up {
		animation: fadeInUp 0.8s ease-out forwards;
	}

	.animation-delay-300 {
		animation-delay: 0.3s;
	}

	.animation-delay-600 {
		animation-delay: 0.6s;
	}

	.animation-delay-900 {
		animation-delay: 0.9s;
	}

	.animation-delay-1000 {
		animation-delay: 1s;
	}

	.animation-delay-1200 {
		animation-delay: 1.2s;
	}
</style>
