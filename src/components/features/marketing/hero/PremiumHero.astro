---
import { cn } from '@/lib/core/utils'
import CalCTAButton from '@/components/ui/CalCTAButton'
import ScrollIndicator from '@/components/ui/ScrollIndicator.astro'
import DashboardMockup from './DashboardMockup.astro'
import { Star, Award, CheckCircle2, TrendingUp } from 'lucide-react'

const { t, locale } = Astro.locals
---

<section
	class={cn(
		'relative min-h-screen flex items-start justify-center overflow-hidden',
		'bg-gradient-to-br from-white via-brand-gray-soft to-brand-blue-light/30',
		'dark:from-brand-black dark:via-brand-charcoal dark:to-brand-soft-black',
	)}
>
	<!-- Subtle decorative elements -->
	<div
		class="bg-brand-blue-soft/30 absolute top-20 right-10 h-72 w-72 animate-pulse rounded-full opacity-50 blur-3xl"
	>
	</div>
	<div
		class="bg-brand-green-soft/30 animation-delay-1000 absolute bottom-20 left-10 h-72 w-72 animate-pulse rounded-full opacity-50 blur-3xl"
	>
	</div>

	<!-- Main Content -->
	<div
		class={cn(
			'relative mx-auto max-w-7xl',
			'mt-16 px-6 py-28',
			'sm:mt-20 sm:py-20 ',
			'md:py-4 md:mt-24',
			'lg:py-4 lg:px-12',
			'xl:py-12 xl:mt-40',
		)}
	>
		<div
			class="grid grid-cols-1 items-center gap-8 sm:gap-10 lg:grid-cols-2 lg:gap-12 xl:gap-16"
		>
			<!-- Left Column: Text Content -->
			<div class="space-y-4 sm:space-y-6 lg:space-x-8">
				<!-- Trust Badges -->
				<div
					class={cn(
						'flex flex-wrap gap-2 items-center sm:gap-3 md:gap-4',
						'opacity-0 animate-fade-in-up',
					)}
				>
					<div
						class="dark:bg-brand-charcoal/80 flex items-center gap-1.5 rounded-full bg-white/80 px-3 py-1.5 shadow-sm backdrop-blur-sm sm:gap-2 sm:px-4 sm:py-2"
					>
						<Star
							className="h-3.5 w-3.5 fill-yellow-500 text-yellow-500 sm:h-4 sm:w-4"
						/>
						<span
							class="text-xs font-medium text-gray-700 sm:text-sm dark:text-gray-300"
							>{t('home.hero.badges.rating')}</span
						>
					</div>
					<div
						class="dark:bg-brand-charcoal/80 flex items-center gap-1.5 rounded-full bg-white/80 px-3 py-1.5 shadow-sm backdrop-blur-sm sm:gap-2 sm:px-4 sm:py-2"
					>
						<Award
							className="text-brand-blue-muted h-3.5 w-3.5 sm:h-4 sm:w-4"
						/>
						<span
							class="text-xs font-medium text-gray-700 sm:text-sm dark:text-gray-300"
							>{t('home.hero.badges.projects')}</span
						>
					</div>
				</div>

				<!-- Subtitle -->
				<p
					class={cn(
						'text-sm sm:text-base md:text-lg font-medium',
						'text-brand-blue-muted dark:text-brand-blue-soft',
						'opacity-0 animate-fade-in-up animation-delay-300',
					)}
				>
					{t('home.hero.subtitle')}
				</p>

				<!-- Main Title -->
				<h1
					class={cn(
						'text-4xl md:text-5xl xl:text-6xl',
						'font-bold tracking-tight leading-[1.2]',
						'opacity-0 animate-fade-in-up animation-delay-600',
					)}
				>
					<span class="text-gray-900 dark:text-white"
						>{t('home.hero.title')}</span
					><br />
					<span
						class="from-brand-blue-muted via-brand-green-muted to-brand-blue-muted relative inline-block bg-gradient-to-r bg-clip-text text-transparent"
					>
						{t('home.hero.titleHighlight')}
						<!-- Decorative underline -->
						<span
							class={cn(
								'from-brand-blue-soft to-brand-green-soft absolute bottom-0 left-0 h-0.5 w-full rounded-full bg-gradient-to-r sm:h-1',
								'sm:-bottom-[2px]',
							)}></span>
					</span><br />
					<span class="text-gray-900 dark:text-white"
						>{t('home.hero.titleEnd')}</span
					>
				</h1>

				<!-- Description -->
				<p
					class={cn(
						'text-base sm:text-lg md:text-xl text-gray-600 dark:text-gray-400 leading-relaxed',
						'opacity-0 animate-fade-in-up animation-delay-900',
						'max-w-2xl',
					)}
				>
					{t('home.hero.description')}
				</p>

				<!-- Key Features -->
				<div
					class={cn(
						'space-y-2.5 sm:space-y-3',
						'opacity-0 animate-fade-in-up animation-delay-1200',
					)}
				>
					{
						t('home.hero.features').map(feature => (
							<div class="flex items-start gap-2.5 sm:gap-3">
								<div class="bg-brand-green-soft/50 mt-0.5 flex h-5 w-5 flex-shrink-0 items-center justify-center rounded-full sm:h-6 sm:w-6">
									<CheckCircle2 className="text-brand-green-dark h-3.5 w-3.5 sm:h-4 sm:w-4" />
								</div>
								<span class="text-sm leading-6 font-medium text-gray-700 sm:text-base dark:text-gray-300">
									{feature}
								</span>
							</div>
						))
					}
				</div>

				<!-- CTA Button -->
				<div
					class={cn(
						'opacity-0 animate-fade-in-up animation-delay-1500',
						'flex flex-col gap-2 sm:gap-3',
					)}
				>
					<div class="w-full sm:w-auto">
						<CalCTAButton
							calLink="walid-mos"
							buttonText={t('home.hero.cta')}
							locale={locale}
							variant="hero"
							client:load
						/>
					</div>
					<span
						class="flex items-center justify-center gap-1.5 text-xs text-gray-500 sm:gap-2 sm:text-sm dark:text-gray-400"
					>
						<TrendingUp className="h-3.5 w-3.5 sm:h-4 sm:w-4" />
						{t('home.hero.consultation')}
					</span>
				</div>
			</div>

			<!-- Right Column: Visual Element -->
			<div
				class={cn(
					'relative opacity-0 animate-fade-in-right animation-delay-900',
					'hidden lg:flex items-center justify-center',
				)}
			>
				<DashboardMockup />
			</div>
		</div>
	</div>

	<!-- Scroll Indicator -->
	<ScrollIndicator />
</section>
