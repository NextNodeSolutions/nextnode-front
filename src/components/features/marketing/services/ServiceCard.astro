---
import { cn } from '@/lib/core/utils'
import {
	Code,
	ShoppingCart,
	Smartphone,
	Palette,
	Search,
	Headphones,
} from 'lucide-react'

interface Props {
	title: string
	description: string
	icon: string
}

const { title, description, icon } = Astro.props

// Map icon names to lucide-react components
const iconMap: Record<string, typeof Code> = {
	'lucide:code': Code,
	'lucide:shopping-cart': ShoppingCart,
	'lucide:smartphone': Smartphone,
	'lucide:palette': Palette,
	'lucide:search': Search,
	'lucide:headphones': Headphones,
}

const IconComponent = iconMap[icon] || Code
---

<div
	class={cn(
		'group relative p-8 rounded-2xl',
		'bg-white dark:bg-brand-charcoal',
		'border border-gray-200 dark:border-brand-soft-black',
		'hover:border-brand-blue dark:hover:border-brand-blue',
		'transition-all duration-300',
		'hover:shadow-xl hover:shadow-brand-blue/10',
		'hover:-translate-y-2 cursor-pointer',
	)}
>
	<!-- Icon Background Gradient -->
	<div
		class={cn(
			'absolute top-8 right-8 w-24 h-24 rounded-full opacity-0',
			'bg-gradient-to-br from-brand-blue/20 to-brand-green/20',
			'blur-2xl group-hover:opacity-100 transition-opacity duration-500',
		)}
	>
	</div>

	<!-- Icon -->
	<div
		class={cn(
			'relative mb-6 w-14 h-14 rounded-xl flex items-center justify-center',
			'bg-gradient-to-br from-brand-blue to-brand-green',
			'group-hover:scale-110 transition-transform duration-300',
		)}
	>
		<IconComponent className="h-7 w-7 text-white" />
	</div>

	<!-- Content -->
	<div class="relative space-y-3">
		<h3
			class={cn(
				'text-xl sm:text-2xl font-semibold',
				'text-gray-900 dark:text-white',
				'group-hover:text-brand-blue dark:group-hover:text-brand-blue',
				'transition-colors duration-300',
			)}
		>
			{title}
		</h3>
		<p class="leading-relaxed text-gray-600 dark:text-gray-400">
			{description}
		</p>
	</div>

	<!-- Hover Arrow -->
	<div
		class={cn(
			'absolute bottom-6 right-8 opacity-0 group-hover:opacity-100',
			'transform translate-x-0 group-hover:translate-x-2',
			'transition-all duration-300',
		)}
	>
		<svg
			class="text-brand-blue h-5 w-5"
			fill="none"
			stroke="currentColor"
			viewBox="0 0 24 24"
		>
			<path
				stroke-linecap="round"
				stroke-linejoin="round"
				stroke-width="2"
				d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
		</svg>
	</div>
</div>
