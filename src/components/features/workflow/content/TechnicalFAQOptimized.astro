---
import { getFAQQuestions, getFAQCategories } from './faq/data'
import FAQApp from './faq/FAQApp'

const faqQuestions = getFAQQuestions()
const categories = getFAQCategories()
---

<div class="technical-faq">
	<FAQApp questions={faqQuestions} categories={categories} client:load />
</div>

<style>
	/* Search highlighting styles */
	.technical-faq mark {
		background-color: rgb(254 240 138);
		color: rgb(120 53 15);
		padding: 0.125rem 0.25rem;
		border-radius: 0.25rem;
		font-weight: 500;
	}

	.dark .technical-faq mark {
		background-color: rgb(120 53 15 / 0.5);
		color: rgb(254 240 138);
	}

	/* Enhanced hover effects */
	.technical-faq .faq-item:hover {
		transform: translateY(-2px);
	}

	.technical-faq .faq-item:focus-within {
		transform: translateY(-2px);
		box-shadow:
			0 10px 25px -5px rgba(0, 0, 0, 0.1),
			0 10px 10px -5px rgba(0, 0, 0, 0.04);
	}
</style>
