---
/**
 * MobileTimeline.wrapper - Bridge between Astro and React
 * Renders server-side content, wraps with React for interactivity
 */
import { MobileTimelineInteractive } from './MobileTimelineInteractive'
import MobileTimelineAstro from './MobileTimeline.astro'
import type { Step } from '@/types/workflow'

export interface Props {
	steps: Step[]
}

const { steps } = Astro.props
---

<MobileTimelineInteractive client:visible>
	<MobileTimelineAstro steps={steps} />
</MobileTimelineInteractive>
