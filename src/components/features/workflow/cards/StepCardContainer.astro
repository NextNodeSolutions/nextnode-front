---
import StepCard from './StepCard.astro'
import { cn } from '@/lib/core/utils'

interface Props {
	stepKey:
		| 'discovery'
		| 'design'
		| 'development'
		| 'testing'
		| 'deployment'
		| 'support'
	index: number
	className?: string
	variant?: 'mobile' | 'compact' | 'mini'
}

const { stepKey, index, className = '', variant = 'mobile' } = Astro.props
---

<div
	class={cn(
		'animate-in animate-slide-in-from-bottom-8 duration-700 animate-fill-mode-forwards opacity-0 motion-reduce:animate-none motion-reduce:opacity-100 hover:translate-x-1 transform transition-all',
		className,
	)}
	style={`animation-delay: ${index * 150}ms`}
	data-step-card
	data-step-index={index}
>
	<StepCard stepKey={stepKey} index={index} variant={variant} />
</div>
