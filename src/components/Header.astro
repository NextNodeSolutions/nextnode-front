---
// Navigation items can be passed as props for flexibility
export interface Props {
	navItems?: Array<{ label: string; href: string }>
}

const {
	navItems = [
		{ label: 'Accueil', href: '/' },
		{ label: 'Documentation', href: '/docs' },
		{ label: 'Ã€ propos', href: '/about' },
	],
} = Astro.props
---

<header
	class="sticky top-0 z-50 border-b border-gray-200 bg-white/80 backdrop-blur-md"
>
	<nav class="container-padding mx-auto max-w-7xl">
		<div class="flex h-16 items-center justify-between">
			<!-- Logo -->
			<div class="flex items-center space-x-2">
				<div
					class="from-nextnode-500 to-accent-500 flex h-8 w-8 items-center justify-center rounded-lg bg-gradient-to-br"
				>
					<span class="text-lg font-bold text-white">N</span>
				</div>
				<span class="text-xl font-bold text-gray-900">
					<span class="text-nextnode-600">Next</span><span
						class="text-accent-600">node</span
					>
				</span>
			</div>

			<!-- Desktop Navigation -->
			<div class="hidden items-center space-x-8 md:flex">
				{
					navItems.map(item => (
						<a
							href={item.href}
							class="hover:text-nextnode-600 font-medium text-gray-700 transition-colors duration-200"
						>
							{item.label}
						</a>
					))
				}
			</div>

			<!-- CTA Button -->
			<div class="hidden md:block">
				<a
					href="https://github.com/nextnode"
					target="_blank"
					rel="noopener noreferrer"
					class="from-nextnode-600 to-accent-600 hover:from-nextnode-700 hover:to-accent-700 rounded-lg bg-gradient-to-r px-4 py-2 font-medium text-white shadow-lg transition-all duration-200 hover:shadow-xl"
				>
					GitHub
				</a>
			</div>

			<!-- Mobile menu button -->
			<div class="md:hidden">
				<button
					type="button"
					class="hover:text-nextnode-600 focus:text-nextnode-600 text-gray-700 focus:outline-none"
					id="mobile-menu-button"
				>
					<svg
						class="h-6 w-6"
						fill="none"
						viewBox="0 0 24 24"
						stroke="currentColor"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</div>
		</div>

		<!-- Mobile menu -->
		<div class="hidden md:hidden" id="mobile-menu">
			<div
				class="space-y-1 border-t border-gray-200 bg-white px-2 pt-2 pb-3"
			>
				{
					navItems.map(item => (
						<a
							href={item.href}
							class="hover:text-nextnode-600 block rounded-md px-3 py-2 text-gray-700 transition-colors duration-200 hover:bg-gray-50"
						>
							{item.label}
						</a>
					))
				}
				<a
					href="https://github.com/nextnode"
					target="_blank"
					rel="noopener noreferrer"
					class="from-nextnode-600 to-accent-600 hover:from-nextnode-700 hover:to-accent-700 mt-4 block w-full rounded-md bg-gradient-to-r px-3 py-2 text-center font-medium text-white transition-all duration-200"
				>
					GitHub
				</a>
			</div>
		</div>
	</nav>
</header>

<script>
	// Mobile menu toggle
	const button = document.getElementById('mobile-menu-button')
	const menu = document.getElementById('mobile-menu')

	button?.addEventListener('click', () => {
		menu?.classList.toggle('hidden')
	})
</script>
