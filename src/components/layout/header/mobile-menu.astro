---
import { cn } from '@/lib/utils'
import Navigation from './navigation.astro'
import Controls from './controls.astro'
import Logo from './logo.astro'
import MobileButton from './mobile-button.astro'

interface Props {
	links: { href: string; label: string }[]
}

const { links } = Astro.props
---

<div 
  class="md:hidden fixed inset-0 z-50 bg-white/95 backdrop-blur-sm opacity-0 invisible transition-all duration-300"
  id="mobile-menu"
>
  <div class="flex flex-col h-full">
    <div class="border-b border-gray-200">
      <div class="px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-12">
          <Logo variant="mobile" />
          <MobileButton action="close" />
        </div>
      </div>
    </div>
    
    <Navigation links={links} variant="mobile" />
    
    <div class="mt-auto px-4 sm:px-6 lg:px-8 py-4">
      <Controls variant="mobile" />
    </div>
  </div>
</div> 