---
import { cn } from '@/lib/utils'

interface Props {
	links: { href: string; label: string }[]
	variant?: 'desktop' | 'mobile'
}

const { links, variant = 'desktop' } = Astro.props
---

<nav class={cn(
  variant === 'desktop' ? 'hidden md:flex items-center space-x-6' : 'flex-1 px-4 sm:px-6 lg:px-8 py-8'
)}>
  {variant === 'desktop' ? (
    links.map((link) => (
      <a
        href={link.href}
        class="relative px-1.5 py-0.5 rounded-md text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-100 transition-all duration-300"
      >
        {link.label}
      </a>
    ))
  ) : (
    <div class="space-y-2">
      {links.map((link, index) => (
        <a
          href={link.href}
          class="group flex items-center justify-between py-4 px-2 text-gray-700 hover:text-gray-900 border-b border-gray-100 last:border-b-0 transition-all duration-300 hover:translate-x-2"
          style={`animation-delay: ${index * 100}ms`}
        >
          <span class="text-xl font-medium group-hover:font-semibold transition-all duration-300">
            {link.label}
          </span>
          <svg class="w-5 h-5 text-gray-400 group-hover:text-gray-600 group-hover:translate-x-1 transition-all duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      ))}
    </div>
  )}
</nav>

<style>
  /* Animation d'entr√©e simple */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  nav a {
    animation: fadeInUp 0.3s ease-out forwards;
    opacity: 0;
  }
</style> 