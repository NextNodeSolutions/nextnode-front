---
import { cn } from '@/lib/utils'
import { Menu, X } from 'lucide-react'

interface Props {
	action: 'open' | 'close'
}

const { action } = Astro.props
---

<button
	class="rounded-full p-1.5 text-gray-600 transition-all duration-300 hover:scale-110 hover:bg-gray-100 hover:text-gray-900 md:hidden dark:text-gray-400 dark:hover:bg-gray-800 dark:hover:text-gray-100"
	aria-label={`${action === 'open' ? 'Open' : 'Close'} menu`}
	id={`mobile-menu-${action}-button`}
>
	{
		action === 'open' ? (
			<Menu className="w-5 h-5" />
		) : (
			<X className="w-5 h-5" />
		)
	}
</button>
