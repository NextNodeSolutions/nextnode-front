---
import { cn } from '@/lib/utils'

interface Props {
	action: 'open' | 'close'
}

const { action } = Astro.props
---

<button
  class="md:hidden p-1.5 rounded-full text-gray-600 hover:text-gray-900 hover:bg-gray-100 transition-all duration-300 hover:scale-110"
  aria-label={`${action === 'open' ? 'Open' : 'Close'} menu`}
  id={`mobile-menu-${action}-button`}
>
  <svg
    class="w-5 h-5"
    fill="none"
    stroke="currentColor"
    viewBox="0 0 24 24"
  >
    {action === 'open' ? (
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M4 6h16M4 12h16M4 18h16"
      />
    ) : (
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M6 18L18 6M6 6l12 12"
      />
    )}
  </svg>
</button> 