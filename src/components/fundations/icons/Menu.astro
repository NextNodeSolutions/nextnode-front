---
import type { HTMLAttributes } from 'astro/types'

/**
 * Available icon sizes
 */
export type IconSize = 'xs' | 'sm' | 'base' | 'md' | 'lg' | 'xl'

/**
 * Props for the Menu icon component
 */
export interface Props extends Omit<HTMLAttributes<'svg'>, 'class'> {
	/** Size of the icon */
	size?: IconSize
	/** Additional CSS classes */
	class?: string
}

const { size = 'base', class: className, ...rest } = Astro.props

const sizeClasses: Record<IconSize, string> = {
	xs: 'size-3',
	sm: 'size-4',
	base: 'size-5',
	md: 'size-6',
	lg: 'size-7',
	xl: 'size-8',
}
---

<svg
	xmlns="http://www.w3.org/2000/svg"
	viewBox="0 0 256 256"
	fill="currentColor"
	class:list={['icon', sizeClasses[size], className]}
	{...rest}
>
