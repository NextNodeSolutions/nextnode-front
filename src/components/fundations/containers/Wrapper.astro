---
import type { HTMLAttributes } from 'astro/types'

/**
 * Wrapper component for consistent content widths
 * @module fundations/containers/Wrapper
 */

export type WrapperVariant = 'standard' | 'narrow' | 'prose'

interface Props extends HTMLAttributes<'div'> {
	variant?: WrapperVariant
	class?: string
	id?: string
}

const {
	variant = 'standard',
	class: extraClass = '',
	id,
	...rest
} = Astro.props

const variantClasses: Record<WrapperVariant, string> = {
	narrow: 'max-w-2xl mx-auto px-4',
	standard: 'mx-auto max-w-7xl px-4',
	prose: 'prose prose-p:text-base-400 prose-hr:bg-base-500 prose-code:text-white prose-ol:text-base-400 prose-li:text-base-400 prose-strong:text-white prose-a:!text-white pt-0 prose-pre:rounded-none prose-pre:border prose-pre:border-base-900 prose-pre:scrollbar-hide prose-headings:text-white prose-headings:font-light prose-h1:font-display',
}

const classes = `${variantClasses[variant]} ${extraClass}`.trim()
---

<div class={classes} id={id} {...rest}>
	<slot />
</div>
