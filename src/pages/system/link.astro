---
/**
 * Design System - Links Page
 *
 * Showcases all link styles using Button component with isLink prop.
 * Shows default, accent, and muted variants at all sizes with hover states.
 */

// Layouts
import BaseLayout from '@/layouts/BaseLayout.astro'

// Fundations
import Text from '@/components/fundations/elements/Text.astro'
import Button from '@/components/fundations/elements/Button.astro'
import Wrapper from '@/components/fundations/containers/Wrapper.astro'

// Icons
import Plus from '@/components/fundations/icons/Plus.astro'

// Page metadata
const title = 'Links | Design System'
const description =
	'Link styles and variants for the NextNode design system. Shows Button component as anchor elements.'
---

<BaseLayout title={title} description={description}>
	<section>
		<Wrapper variant="standard" class="py-24">
			<Text
				tag="h1"
				variant="displayXL"
				class="font-display mt-12 text-balance text-white"
			>
				Links
			</Text>
			<Text tag="p" variant="textLG" class="text-base-300 mt-4 max-w-2xl">
				Button component rendered as anchor elements using isLink prop.
				All variants and sizes are available with hover states.
			</Text>

			<div
				class="mt-12 grid grid-cols-1 gap-12 md:grid-cols-2 lg:grid-cols-3"
			>
				<!-- Default Variant Links -->
				<div class="grid grid-cols-1 gap-8 md:grid-cols-2">
					<div>
						<Text
							tag="p"
							variant="textXS"
							class="font-medium text-white uppercase"
						>
							Default text
						</Text>
						<div class="mt-2 flex flex-col gap-4">
							<Button
								isLink={true}
								href="#_"
								size="xxs"
								variant="default"
							>
								Default XXS
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="xs"
								variant="default"
							>
								Default XS
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="sm"
								variant="default"
							>
								Default SM
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="base"
								variant="default"
							>
								Default Base
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="md"
								variant="default"
							>
								Default MD
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="lg"
								variant="default"
							>
								Default LG
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="xl"
								variant="default"
							>
								Default XL
							</Button>
						</div>
					</div>
					<div>
						<Text
							tag="p"
							variant="textXS"
							class="font-medium text-white uppercase"
						>
							Icon
						</Text>
						<div class="mt-2 flex flex-col gap-4">
							<Button
								isLink={true}
								href="#_"
								size="xxs"
								variant="default"
								iconOnly
							>
								<Plus slot="icon" size="sm" />
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="xs"
								variant="default"
								iconOnly
							>
								<Plus slot="icon" size="sm" />
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="sm"
								variant="default"
								iconOnly
							>
								<Plus slot="icon" size="base" />
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="base"
								variant="default"
								iconOnly
							>
								<Plus slot="icon" size="base" />
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="md"
								variant="default"
								iconOnly
							>
								<Plus slot="icon" size="lg" />
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="lg"
								variant="default"
								iconOnly
							>
								<Plus slot="icon" size="xl" />
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="xl"
								variant="default"
								iconOnly
							>
								<Plus slot="icon" size="xl" />
							</Button>
						</div>
					</div>
				</div>

				<!-- Accent Variant Links -->
				<div class="grid grid-cols-1 gap-8 md:grid-cols-2">
					<div>
						<Text
							tag="p"
							variant="textXS"
							class="font-medium text-white uppercase"
						>
							Accent text
						</Text>
						<div class="mt-2 flex flex-col gap-4">
							<Button
								isLink={true}
								href="#_"
								size="xxs"
								variant="accent"
							>
								Accent XXS
