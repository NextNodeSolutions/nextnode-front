							<Button
								isLink={true}
								href="#_"
								size="xs"
								variant="accent"
							>
								Accent XS
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="sm"
								variant="accent"
							>
								Accent SM
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="base"
								variant="accent"
							>
								Accent Base
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="md"
								variant="accent"
							>
								Accent MD
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="lg"
								variant="accent"
							>
								Accent LG
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="xl"
								variant="accent"
							>
								Accent XL
							</Button>
						</div>
					</div>
					<div>
						<Text
							tag="p"
							variant="textXS"
							class="font-medium text-white uppercase"
						>
							Icon
						</Text>
						<div class="mt-2 flex flex-col gap-4">
							<Button
								isLink={true}
								href="#_"
								size="xxs"
								variant="accent"
								iconOnly
							>
								<Plus slot="icon" size="sm" />
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="xs"
								variant="accent"
								iconOnly
							>
								<Plus slot="icon" size="sm" />
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="sm"
								variant="accent"
								iconOnly
							>
								<Plus slot="icon" size="base" />
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="base"
								variant="accent"
								iconOnly
							>
								<Plus slot="icon" size="base" />
							</Button>
							<Button
								isLink={true}
								href="#_"
								size="md"
								variant="accent"
								iconOnly
							>
								<Plus slot="icon" size="lg" />
							</Button>
							<Button
								isLink={true}
								href="#_"
