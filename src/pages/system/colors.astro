---

<BaseLayout title={title} description={description}>
	<section>
		<Wrapper variant="standard" class="py-24">
			<Text
				tag="h1"
				variant="displayXL"
				class="font-display mt-12 text-balance text-white"
			>
				Colors
			</Text>
			<Text tag="p" variant="textLG" class="text-base-300 mt-4 max-w-2xl">
				NextNode color palette using OKLCH color space for perceptually
				uniform colors. Includes brand colors, accent aliases, and a
				neutral gray scale.
			</Text>

			<div class="mt-12 space-y-16">
				{
					colorGroups.map(group => (
						<div>
							<Text
								tag="h2"
								variant="displaySM"
								class="font-display text-white"
							>
								{group.title}
							</Text>
							<Text
								tag="p"
								variant="textBase"
								class="text-base-400 mt-2"
							>
								{group.description}
							</Text>

							<div class="mt-6 grid grid-cols-2 gap-4 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6">
								{group.colors.map(color => (
									<div class="flex flex-col gap-2">
										<div
											class:list={[
												'h-16 w-full rounded-lg',
												color.class,
											]}
										/>
										<div class="flex flex-col">
											<span class="text-sm font-medium text-white">
												{color.name}
											</span>
											<span class="text-base-500 font-mono text-xs">
												{color.value}
											</span>
										</div>
									</div>
								))}
							</div>
						</div>
					))
				}
			</div>

			<!-- Usage Guidelines -->
			<div class="mt-16">
				<Text
					tag="h2"
					variant="displaySM"
					class="font-display text-white"
				>
					Usage Guidelines
				</Text>

				<div class="mt-6 grid gap-6 md:grid-cols-2">
					<div class="bg-base-900 rounded-lg p-6">
						<Text
							tag="h3"
							variant="textLG"
							class="font-medium text-white"
						>
							Brand Colors
						</Text>
						<Text
							tag="p"
							variant="textSM"
							class="text-base-400 mt-2"
						>
							Use <code class="bg-base-800 rounded px-1"
								>nextnode-*</code
							> for primary brand elements like buttons, links, and
							highlights. The 500-600 range works well for interactive
							elements.
						</Text>
					</div>

					<div class="bg-base-900 rounded-lg p-6">
						<Text
							tag="h3"
							variant="textLG"
							class="font-medium text-white"
						>
							Accent Colors
						</Text>
						<Text
							tag="p"
							variant="textSM"
							class="text-base-400 mt-2"
						>
							<code class="bg-base-800 rounded px-1"
								>accent-*</code
							> is aliased to nextnode-* for Buio component compatibility.
							Use either token interchangeably.
						</Text>
					</div>

					<div class="bg-base-900 rounded-lg p-6">
						<Text
							tag="h3"
							variant="textLG"
							class="font-medium text-white"
						>
							Orange Accent
						</Text>
						<Text
							tag="p"
							variant="textSM"
							class="text-base-400 mt-2"
						>
							Use <code class="bg-base-800 rounded px-1"
								>orange-*</code
							> for CTAs, subscribe buttons, and secondary accents that
							need high visibility contrast with teal.
						</Text>
					</div>

					<div class="bg-base-900 rounded-lg p-6">
						<Text
							tag="h3"
							variant="textLG"
							class="font-medium text-white"
						>
