---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Header from '@/components/layout/header/Header.astro'
import Footer from '@/components/layout/footer/Footer.astro'
import PremiumHero from '@/components/features/marketing/hero/PremiumHero.astro'
import WorkflowSection from '@/components/features/marketing/workflow/WorkflowSection.astro'
import TechTransformation from '@/components/features/marketing/tech/TechTransformation.astro'
import TechExpertiseBento from '@/components/features/marketing/tech-expertise/TechExpertiseBento'
import CTASection from '@/components/features/marketing/cta/CTASection.astro'

const { t } = Astro.locals

const title = t('common.meta.homepage.title')
const description = t('common.meta.homepage.description')
const techExpertise = t('home.techExpertise')
---

<BaseLayout title={title} description={description}>
	<div class="relative flex min-h-screen flex-col">
		<Header />

		<main class="flex flex-col">
			<!-- Hero Section -->
			<PremiumHero />

			<!-- Workflow Process Section -->
			<WorkflowSection />

			<!-- Tech Transformation Section -->
			<TechTransformation />

			<!-- Tech Expertise Section -->
			<TechExpertiseBento
				title={techExpertise.title}
				subtitle={techExpertise.subtitle}
				techStack={techExpertise.techStack}
				metrics={techExpertise.metrics}
				codeExample={techExpertise.codeExample}
				tools={techExpertise.tools}
				client:visible
			/>

			<!-- CTA Section -->
			<CTASection />
		</main>

		<Footer />
	</div>
</BaseLayout>
