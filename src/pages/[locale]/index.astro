---
// Welcome to Astro! Everything between these triple-dash code fences
// is your "component frontmatter". It never runs in the browser.

import Welcome from '@/components/features/marketing/hero/welcome.astro'
import BaseLayout from '@/layouts/BaseLayout.astro'
import GradientCircle from '@/components/common/gradient-circle.astro'
import Header from '@/components/layout/header/header.astro'
import Footer from '@/components/layout/footer/footer.astro'
import { cn } from '@/lib/core/utils'
import { initI18n } from '@/lib/i18n/i18n-server'

// Get language from route parameter
// For [locale], the parameter is a single string
const locale = Astro.params.locale || 'en'
await initI18n(Astro.request, locale)
---

<BaseLayout title="Nextnode - Creative Agency">
	<div class="relative flex min-h-screen flex-col">
		<Header />
		<main class={cn('flex flex-col flex-1 justify-center')}>
			<Welcome />
		</main>

		<GradientCircle />
		<Footer />
	</div>
</BaseLayout>
