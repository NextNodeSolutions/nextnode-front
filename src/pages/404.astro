---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Header from '@/components/layout/header.astro'
import Footer from '@/components/layout/footer.astro'
import { getRelativeLocaleUrl } from 'astro:i18n'
import { initI18n } from '@/lib/i18n-server'
import { t } from '@/lib/i18n-server'

// Try to detect language from URL or use default
const pathname = Astro.url.pathname
const pathLangMatch = pathname.match(/^\/(en|fr)(\/|$)/)
const currentLocale =
	(pathLangMatch ? pathLangMatch[1] : Astro.currentLocale) || 'en'

// Initialize i18n
await initI18n(Astro.request, currentLocale)

// Generate locale-aware URLs
const homeUrl = getRelativeLocaleUrl(currentLocale, '/')
const howWeWorkUrl = getRelativeLocaleUrl(currentLocale, '/how-we-work')
---

<BaseLayout title={t('error.pageTitle')}>
	<div class="relative flex min-h-screen flex-col">
		<Header />

		<main
			class="flex flex-1 flex-col items-center justify-center px-4 text-center"
		>
			<div class="mx-auto max-w-md">
				<!-- Error code -->
				<div class="mb-8">
					<h1
						class="text-8xl font-bold text-gray-900 dark:text-gray-100"
					>
						404
					</h1>
					<div
						class="mx-auto h-1 w-24 rounded-full bg-gradient-to-r from-blue-500 to-purple-600"
					>
					</div>
				</div>

				<!-- Error message -->
				<div class="mb-12">
					<h2
						class="mb-4 text-2xl font-semibold text-gray-900 dark:text-gray-100"
					>
						{t('error.pageNotFound')}
					</h2>
					<p class="leading-relaxed text-gray-600 dark:text-gray-400">
						{t('error.pageNotFoundDescription')}
					</p>
				</div>

				<!-- Actions -->
				<div class="space-y-4">
					<a
						href={homeUrl}
						class="inline-flex items-center justify-center rounded-lg border border-transparent bg-gradient-to-r from-blue-500 to-purple-600 px-6 py-3 text-base font-medium text-white transition-all duration-300 hover:scale-105 hover:from-blue-600 hover:to-purple-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:outline-none"
					>
						{t('error.backToHome')}
					</a>

					<div class="text-sm text-gray-500 dark:text-gray-400">
						{t('error.or')}
						<a
							href={howWeWorkUrl}
							class="ml-1 text-blue-600 transition-colors duration-300 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300"
						>
							{t('error.learnMoreAboutUs')}
						</a>
					</div>
				</div>
			</div>

			<!-- Decorative elements -->
			<div class="absolute inset-0 -z-10 overflow-hidden">
				<div
					class="absolute top-1/4 left-1/4 h-32 w-32 rounded-full bg-blue-500/10 blur-xl"
				>
				</div>
				<div
					class="absolute right-1/4 bottom-1/4 h-24 w-24 rounded-full bg-purple-500/10 blur-xl"
				>
				</div>
			</div>
		</main>

		<Footer />
	</div>
</BaseLayout>
