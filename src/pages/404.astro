---
import BaseLayout from '@/layouts/BaseLayout.astro'
import Header from '@/components/layout/header/Header.astro'
import Footer from '@/components/layout/footer/Footer.astro'
import { getRelativeLocaleUrl } from 'astro:i18n'
// Use new i18n system from middleware
const { locale: currentLocale, t } = Astro.locals

// Generate locale-aware URLs
const homeUrl = getRelativeLocaleUrl(currentLocale, '/')
const pricingUrl = getRelativeLocaleUrl(currentLocale, '/pricing')
---

<BaseLayout title={t('error.pageTitle')}>
	<div class="relative flex min-h-screen flex-col">
		<Header />

		<main
			class="flex flex-1 flex-col items-center justify-center px-4 text-center"
		>
			<div class="mx-auto max-w-md">
				<!-- Error code -->
				<div class="mb-8">
					<h1
						class="text-8xl font-bold text-gray-900 dark:text-gray-100"
					>
						404
					</h1>
					<div
						class="btn-gradient-primary mx-auto h-1 w-24 rounded-full"
					>
					</div>
				</div>

				<!-- Error message -->
				<div class="mb-12">
					<h2
						class="mb-4 text-2xl font-semibold text-gray-900 dark:text-gray-100"
					>
						{t('error.pageNotFound')}
					</h2>
					<p class="leading-relaxed text-gray-600 dark:text-gray-400">
						{t('error.pageNotFoundDescription')}
					</p>
				</div>

				<!-- Actions -->
				<div class="space-y-4">
					<a
						href={homeUrl}
						class="btn-gradient-primary inline-flex items-center justify-center rounded-lg border border-transparent px-6 py-3 text-base font-medium text-white hover:scale-105 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:outline-none"
					>
						{t('error.backToHome')}
					</a>

					<div class="text-sm text-gray-500 dark:text-gray-400">
						{t('error.or')}
						<a
							href={pricingUrl}
							class="text-brand-blue hover:text-brand-blue-dark dark:text-brand-blue dark:hover:text-brand-blue-light ml-1 transition-colors duration-300"
						>
							{t('error.learnMoreAboutUs')}
						</a>
					</div>
				</div>
			</div>

			<!-- Decorative elements -->
			<div class="absolute inset-0 -z-10 overflow-hidden">
				<div
					class="bg-brand-blue/10 absolute top-1/4 left-1/4 h-32 w-32 rounded-full blur-xl"
				>
				</div>
				<div
					class="bg-brand-green/10 absolute right-1/4 bottom-1/4 h-24 w-24 rounded-full blur-xl"
				>
				</div>
			</div>
		</main>

		<Footer />
	</div>
</BaseLayout>
